  <script>

    $(function () {

      var aux = document.querySelector("#message").value;

      if (aux == "u") {

        swal('Error', 'El Usuario no Existe', 'error');

      } else if (aux == "c") {

        swal('Error', 'Clave Incorrecta', 'error');

      }
    });

