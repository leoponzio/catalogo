<!-- Modal -->
<div class="modal fade" id="modalFormProd" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header text-center text-white" id="modalHeadProd">
        <h2 class="modal-title">Nuevo Departamento</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="tile">

          <div class="tile-body">
            <form enctype="multipart/form-data" action="/productos/setProd" id="formProd" name="formProd" method="POST">
                <input type="hidden" id="idProd" name="idProd" value="">
                <div class="row">
                  <div class="form-group">
                    <label for="" class="col-form-label">Codigo</label>
                    <input type="text" id="cod" name="cod" class="form-control" placeholder="Codigo" required autofocus>
                 </div>
               
                </div>
                <div class="row border border-primary rounded">
                <div class="col-lg-6">
                  <div class="form-group">
                    <label>Departamento</label>
                    <select class="form-control selectpicker" name="dpto" data-live-search="true" id="cdpto">
                      {{#each dptos}}
                      <option value="{{dp_cod}}">{{dp_des}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label>Status</label>
                    <select class="form-control selectpicker" name="activo" id="activo">
                      <option value="1">Disponible</option>
                      <option value="2">No Disponible</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="" class="col-form-label">Descripcion</label>
                <input type="text" id="des" name="des" class="form-control" placeholder="Descripcion" required>
              </div>
              <div class="form-group">
                <label for="" class="col-form-label">Detalle</label>
                <textarea id="det" name="det" rows="2" class="form-control" placeholder="Detalle"></textarea>
