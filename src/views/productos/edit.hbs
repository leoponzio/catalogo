<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">

            <div class="card">
                <div class="card-head text-center text-white bg-info">
                   <h1>Actualiza Producto</h1>
                </div>
                <div class="card-body">
                    <form action="/productos/edit/{{prod.id}}" method="POST">
                        <input type="hidden" name="p_id" value="{{prod.p_id}}">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="col-form-label">Codigo</label>
                                    <input type="text" name="cod" class="form-control" placeholder="Codigo" value="{{prod.cod}}" disabled>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Departamento</label>
                                    <select class="form-control NotItemOne" name="dpto" id="">
                                        <option selected value="{{prod.dpto}}">{{prod.dp_des}}</option>
                                        {{#each dptos}}
                                        <option value="{{dp_cod}}">{{dp_des}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div> 
                        <div class="form-group">
                            <label for="" class="col-form-label">Descripcion</label>
                            <input type="text" name="des" class="form-control" placeholder="Descripcion" value="{{prod.des}}" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-form-label">Detalle</label>
                            <textarea name="det" rows="2" class="form-control" placeholder="Detalle">{{prod.detalle}}</textarea>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="col-form-label">Precio $</label>
                                    <input type="number" step="0.01" name="preciod1" class="form-control" value="{{prod.preciod1}}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="col-form-label">Precio $ Mayor</label>
                                    <input type="number" step="0.01" name="preciod2" class="form-control" value="{{prod.preciod2}}" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="col-form-label">Precio Y</label>
                                    <input type="number" step="0.01" name="precioy1" class="form-control" value="{{prod.precioy1}}" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="col-form-label">Precio Y Mayor</label>
                                    <input type="number" step="0.01" name="precioy2" class="form-control" value="{{prod.precioy2}}" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block"><i class="far fa-save"></i><span id="btnText"> Guardar</span>
                                </button>
                        </div>
                   </form>
                </div>
            </div>
        </div>
    </div>
</div>