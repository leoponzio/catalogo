<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">

            <div class="card">
                <div class="card-head text-center text-white bg-info">
                    <h1>Actualizar Departamento</h1>
                </div>
                <div class="card-body">
                    <form action="/dpto/edit/{{dpto.dp_id}}" method="POST">
                        
                        <div class="form-group">
                               <label for="" class="col-form-label">Codigo</label>
                               <input type="text" name="cod" class="form-control" placeholder="Codigo"  value="{{dpto.dp_cod}}" disabled>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-form-label">Descripcion</label>
                            <input type="text" name="des" class="form-control" placeholder="Descripcion" value="{{dpto.dp_des}}" required autofocus>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-success btn-block"><i class="far fa-save"></i><span id="btnText">
                                    Guardar</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>